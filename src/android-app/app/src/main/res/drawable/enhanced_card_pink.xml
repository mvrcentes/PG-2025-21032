<?xml version="1.0" encoding="utf-8"?>
<!-- Tarjeta mejorada con tonos dorados -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/brand_oj"
                android:endColor="@color/brand_ripe"
                android:angle="45"
                android:type="linear"/>
            <corners android:radius="25dp"/>
            <stroke 
                android:width="2dp" 
                android:color="@color/brand_ripe"/>
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/brand_honeydew"
                android:endColor="@color/brand_oj"
                android:angle="45"
                android:type="linear"/>
            <corners android:radius="25dp"/>
            <stroke 
                android:width="1dp" 
                android:color="@color/brand_ripe"/>
        </shape>
    </item>
</selector>
