<?xml version="1.0" encoding="utf-8"?>
<!-- Botón flotante con gradiente arqueológico -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="#B8944A"
                android:endColor="#A67C52"
                android:angle="135"
                android:type="linear"/>
            <stroke 
                android:width="3dp" 
                android:color="#D25B31"/>
            <size 
                android:width="72dp" 
                android:height="72dp"/>
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#E6B75C"
                android:centerColor="#E2BF9B"
                android:endColor="#ECEBC8"
                android:angle="135"
                android:type="linear"/>
            <stroke 
                android:width="2dp" 
                android:color="#D25B31"/>
            <size 
                android:width="72dp" 
                android:height="72dp"/>
        </shape>
    </item>
</selector>
