<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_enhanced">

    <!-- Video de fondo con overlay mejorado -->
    <VideoView
        android:id="@+id/videoBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:alpha="0.4"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <!-- Overlay con gradiente sutil -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main_enhanced"
        android:alpha="0.3"
        android:clickable="false"
        android:focusable="false"
        android:importantForAccessibility="no"/>

    <!-- Panel blanco curvo que divide la pantalla (arriba de la mitad) -->
    <View
        android:id="@+id/curvedWhitePanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/curved_panel_height"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_white_panel_top_rounded"
        android:minHeight="0dp"
        android:clickable="false"
        android:focusable="false"
        android:importantForAccessibility="no"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/enhancedCardContainer"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="32dp">

            <!-- Header simplificado: solo imagen centrada -->

            <!-- Espacio optimizado para mejor distribución -->

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/header_image_max_height"
                android:background="@android:color/transparent"
                android:contentDescription="@string/maya_image_description"
                android:scaleType="fitCenter"
                android:src="@drawable/maya" />

            <!-- Bloque de texto: Bienvenida y Kaminaljuyú -->
            <LinearLayout
                android:id="@+id/headerTextBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/square_row_horizontal_padding"
                android:layout_marginEnd="@dimen/square_row_horizontal_padding"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/cards_gap">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="@string/welcome_text"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:lineSpacingExtra="0dp"
                    android:letterSpacing="0.01"
                    android:textStyle="bold"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:hyphenationFrequency="none"
                    android:breakStrategy="simple"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeMaxTextSize="24sp"
                    app:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/kaminalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/font"
                    android:text="@string/kaminaljuyu"
                    android:textColor="@color/brand_ripe"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"
                    android:hyphenationFrequency="none"
                    android:breakStrategy="simple"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="22sp"
                    app:autoSizeMaxTextSize="34sp"
                    app:autoSizeStepGranularity="1sp" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/brand_oj" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Container optimizado para tarjetas en la parte inferior -->
    <LinearLayout
        android:id="@+id/enhancedCardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="16dp">

        <!-- TARJETA 1 (Tour Guiado) -->
        <include
            layout="@layout/enhanced_card_teal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_large_height"
            android:layout_marginStart="@dimen/square_row_horizontal_padding"
            android:layout_marginEnd="@dimen/square_row_horizontal_padding"
            android:layout_marginBottom="@dimen/cards_gap" />

        <!-- TARJETA 2 (Tour Libre) -->
        <include
            layout="@layout/enhanced_card_pink"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_large_height"
            android:layout_marginStart="@dimen/square_row_horizontal_padding"
            android:layout_marginEnd="@dimen/square_row_horizontal_padding"
            android:layout_marginBottom="@dimen/cards_gap" />

        <!-- Fila para tarjetas cuadradas: Instrucciones y Términos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/square_row_horizontal_padding"
            android:paddingEnd="@dimen/square_row_horizontal_padding">

            <!-- TARJETA 3 (Instrucciones) como cuadrado -->
            <com.google.ar.core.codelabs.hellogeospatial.ui.SquareFrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/cards_gap"
                android:layout_weight="1">

                <include
                    layout="@layout/enhanced_card_purple_square"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp" />
            </com.google.ar.core.codelabs.hellogeospatial.ui.SquareFrameLayout>

            <!-- TARJETA 4 (Términos) como cuadrado -->
            <com.google.ar.core.codelabs.hellogeospatial.ui.SquareFrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cards_gap"
                android:layout_weight="1">

                <include
                    layout="@layout/enhanced_card_green_square"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp" />
            </com.google.ar.core.codelabs.hellogeospatial.ui.SquareFrameLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
