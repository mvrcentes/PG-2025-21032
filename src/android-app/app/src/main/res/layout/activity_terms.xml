<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_grove">

    <!-- El panel blanco curvo ahora envuelve el contenido para que se desplace con el scroll -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="32dp">

            <!-- Imagen de header igual a main/instrucciones -->
            <ImageView
                android:id="@+id/mayaImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/header_image_max_height"
                android:background="@android:color/transparent"
                android:contentDescription="@string/maya_image_description"
                android:elevation="10dp"
                android:translationZ="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/maya" />

            <!-- Título y línea decorativa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/square_row_horizontal_padding"
                android:layout_marginEnd="@dimen/square_row_horizontal_padding"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/cards_gap"
                android:elevation="8dp"
                android:translationZ="8dp">

                <TextView
                    android:id="@+id/termsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="@string/terms_title"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/brand_oj" />
            </LinearLayout>

            <!-- Panel blanco curvo que se desplaza con el contenido y llena el resto de la pantalla -->
            <LinearLayout
                android:id="@+id/termsContentPanel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="-110dp"
                android:background="@drawable/bg_white_panel_top_rounded"
                android:elevation="0dp"
                android:paddingStart="@dimen/square_row_horizontal_padding"
                android:paddingTop="100dp"
                android:paddingEnd="@dimen/square_row_horizontal_padding"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/termsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/terms"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
