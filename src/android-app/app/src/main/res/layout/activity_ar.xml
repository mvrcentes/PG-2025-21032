<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloGeoActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top" />

    <!-- Panel de controles AR - Superior derecha -->
    <LinearLayout
        android:id="@+id/ar_controls_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_card_green"
        android:padding="8dp"
        android:elevation="12dp">

        <!-- BotÃ³n de informaciÃ³n (Mostrar mÃ¡s informaciÃ³n del POI actual) -->
        <ImageButton
            android:id="@+id/btn_info"
            style="@style/ArButtonStyleSmall"
            android:src="@drawable/ic_info_archaeological"
            android:contentDescription="Mostrar mÃ¡s informaciÃ³n"
            android:tooltipText="Mostrar mÃ¡s informaciÃ³n"/>

        <!-- Guided Tour Controls -->
        <ImageButton
            android:id="@+id/btn_start_tour"
            style="@style/ArButtonStyleSmall"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Iniciar recorrido"
            android:tooltipText="Iniciar recorrido"
            android:layout_marginTop="8dp"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/btn_next_poi"
            style="@style/ArButtonStyleSmall"
            android:layout_marginTop="6dp"
            android:contentDescription="Siguiente montÃ­culo"
            android:enabled="false"
            android:src="@android:drawable/ic_media_next"
            android:tooltipText="Siguiente montÃ­culo"
            android:visibility="gone" />

        <!-- Eliminado: btn_more_info; se usa btn_info como botÃ³n de informaciÃ³n -->

        <ImageButton
            android:id="@+id/btn_finish_tour"
            style="@style/ArButtonStyleSmall"
            android:layout_marginTop="6dp"
            android:contentDescription="Finalizar recorrido"
            android:enabled="false"
            android:src="@drawable/ic_finish_check"
            android:tooltipText="Finalizar recorrido"
            android:visibility="gone" />

        <!-- Flag completion button (shown after returning to start point) -->
        <ImageButton
            android:id="@+id/btn_flag_complete"
            style="@style/ArButtonStyleSmall"
            android:layout_marginTop="6dp"
            android:contentDescription="Confirmar finalizaciÃ³n en punto de inicio"
            android:enabled="false"
            android:src="@drawable/ic_flag_finish"
            android:tooltipText="Finalizar recorrido en el punto de inicio"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Panel de controles de navegaciÃ³n - Superior izquierda -->
    <LinearLayout
        android:id="@+id/navigation_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_card_purple"
        android:padding="8dp"
        android:elevation="12dp">

        <!-- BotÃ³n de regresar/salir -->
        <ImageButton
            android:id="@+id/btn_back"
            style="@style/ArButtonStyleSmall"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Regresar"
            android:tooltipText="Salir del AR"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="45dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FFFFFF">

        <com.google.ar.core.codelabs.hellogeospatial.helpers.MapTouchWrapper
            android:id="@+id/map_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:background="#AAFFFFFF"
                android:fontFamily="monospace"
                android:layout_margin="4dp"/>
        </com.google.ar.core.codelabs.hellogeospatial.helpers.MapTouchWrapper>
    </androidx.cardview.widget.CardView>

        <!-- Loading Overlay: covers entire screen while AR/Map stabilizes -->
        <FrameLayout
            android:id="@+id/loading_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF000000"
            android:clickable="true"
            android:focusable="true"
            android:elevation="100dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/loading_progress"
                    style="@android:style/Widget.ProgressBar.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />

                <TextView
                    android:id="@+id/loading_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:text="Cargando..." />

            </LinearLayout>
        </FrameLayout>

        <!-- Instructions Overlay: shows control explanations over AR view -->
        <FrameLayout
            android:id="@+id/instructions_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC000000"
            android:clickable="true"
            android:focusable="true"
            android:elevation="90dp"
            android:visibility="gone">

            <!-- Close instructions button -->
            <ImageButton
                android:id="@+id/btn_close_instructions"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|end"
                android:layout_margin="20dp"
                android:background="@drawable/ar_button_background"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Cerrar instrucciones"
                android:tint="#FFFFFF"
                android:elevation="5dp" />

            <!-- Welcome message -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ®"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Controles del Tour AR"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/font" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Toca cualquier lugar para continuar"
                            android:textColor="#CCFFFFFF"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Control explanations with exact icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <!-- Back button explanation -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#30FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_revert"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/ar_button_background"
                            android:contentDescription="Regresar"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Regresar al menÃº principal"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/font" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Info button explanation -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#30FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_info_archaeological"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/ar_button_background"
                            android:contentDescription="InformaciÃ³n"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ver informaciÃ³n del POI cercano"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/font" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Start tour button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#30FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_media_play"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/ar_button_background"
                            android:contentDescription="Iniciar tour"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Iniciar recorrido guiado automÃ¡tico"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/font" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Next POI button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#30FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_media_next"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/ar_button_background"
                            android:contentDescription="Siguiente POI"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Avanzar al siguiente punto de interÃ©s"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/font" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Finish tour button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#30FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_finish_check"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/ar_button_background"
                            android:contentDescription="Finalizar tour"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Finalizar el recorrido guiado"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/font" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Touch gestures tip -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#30f093fb"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Gestos: Toca objetos 3D â€¢ Desliza para rotar â€¢ Pellizca para zoom"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:fontFamily="@font/font"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </FrameLayout>
</RelativeLayout>
