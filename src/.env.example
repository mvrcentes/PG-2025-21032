# =============================================================================
# Kaminaljuyú AR - Variables de Entorno
# =============================================================================
# Copia este archivo como .env y configura los valores según tu entorno
# IMPORTANTE: Nunca subas el archivo .env al repositorio
# =============================================================================

# -----------------------------------------------------------------------------
# Google Cloud API Keys
# -----------------------------------------------------------------------------
# Obtener en: https://console.cloud.google.com/apis/credentials
# Habilitar: ARCore API, Maps SDK for Android

# API Key para ARCore Geospatial API
ARCORE_API_KEY=your_arcore_api_key_here

# API Key para Google Maps SDK
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# -----------------------------------------------------------------------------
# Configuración del Tour (opcional - valores por defecto en HelloGeoConfig.kt)
# -----------------------------------------------------------------------------

# Radio en metros para detectar llegada a un POI
GUIDED_ARRIVAL_METERS=10.0

# Radio en metros para waypoints intermedios (conectores)
CONNECTOR_ARRIVAL_METERS=2.0

# Radio en metros desde el punto de inicio para comenzar el tour
TOUR_START_RADIUS_METERS=20.0

# Radio de visibilidad para renderizar modelos 3D (metros)
VISIBILITY_RADIUS_METERS=100.0

# -----------------------------------------------------------------------------
# Punto de inicio del recorrido (Parque Arqueológico Kaminaljuyú)
# -----------------------------------------------------------------------------

# Latitud del punto de inicio
TOUR_START_LAT=14.63128471

# Longitud del punto de inicio
TOUR_START_LON=-90.54847717

# -----------------------------------------------------------------------------
# Configuración de renderizado 3D
# -----------------------------------------------------------------------------

# Escala mínima permitida para modelos (pinch-to-zoom)
MIN_SCALE=0.2

# Escala máxima permitida para modelos (pinch-to-zoom)
MAX_SCALE=5.0

# Luz ambiental (0.0 - 1.0)
LIGHT_AMBIENT=0.9

# Luz difusa (0.0 - 1.0)
LIGHT_DIFFUSE=0.7

# Altura aproximada del ojo de la cámara sobre el suelo (metros)
CAMERA_EYE_HEIGHT_METERS=1.6
